{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/serve.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.10" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/serve.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/frontend/dist/index.html"
    }
  ]
}